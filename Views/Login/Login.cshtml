
<head>
    <title>VYBR - Fashion Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm p-4">
        <div><img src="~/images/logo.png" asp-append-version="true" /></div>


        <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link fw-medium" href="#" style="color: #666; margin: 0 1rem;">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-medium" href="#" style="color: #666; margin: 0 1rem;">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-medium" href="#" style="color: #666; margin: 0 1rem;">FAQs</a>
                </li>
            </ul>

            <input type="search" class="form-control" placeholder="Search..." style="border-radius: 5px; width: 20vw;">

        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
            <div class="col-lg-7 mb-4 mb-lg-0">
                <img src="~/images/sample2.png" style="height: 35vw ; width: 35vw;border-radius: 15px;">
            </div>
            <div class="col-lg-4">
                <div>
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <h4 class="fw-bold mb-0 py-2 px-3" style="background-color: #E4E2DD; border-radius: 8px; color: #131418;">Login</h4>
                        </div>

                        <!-- Registration Form -->
                        <form>
                            <!-- Email -->
                            <div class="mb-3">
                                <label class="form-label fw-medium" style="color: #333;">Email Address</label>
                                <input type="email" class="form-control" style="padding: 0.75rem; border-radius: 8px; border: 1px solid #ddd;">
                            </div>

                            <!-- Password -->
                            <div class="mb-3">
                                <label class="form-label fw-medium" style="color: #333;">Password</label>
                                <input type="password" id="password" class="form-control" style="padding: 0.75rem; padding-right: 2.5rem; border-radius: 8px; border: 1px solid #ddd;">
                            </div>

                            <button type="submit" class="btn w-100 fw-medium mt-2" style="background-color: #333; color: white; padding: 0.75rem; border-radius: 8px; border: none; transition: all 0.3s;" onmouseover="this.style.backgroundColor='#555'" onmouseout="this.style.backgroundColor='#333'">Login</button>
                        </form>

                        <div class="text-center mt-3">
                            <span style="color: #666;">Don't have an account? <a href="" style="color: #131418; text-decoration: none; font-weight: 500;">Register</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="mt-5 py-4 text-center" style="background-color: #E4E2DD; border-top: 1px solid #e9ecef;">
        <div class="container">
            <p class="mb-0" style="color: #131418; font-size: 0.9rem;">Copyright © 2025 VYBR · All Rights Reserved.</p>
        </div>
    </footer>

</body>
</html>
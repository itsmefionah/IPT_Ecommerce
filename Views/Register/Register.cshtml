<head>
    <title>VYBR - Fashion Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: white;
        }

        .form-control {
            height: 3vw;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm p-4">
        <div><img src="~/images/logo.png" asp-append-version="true" /></div>


        <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link fw-medium" href="#" style="color: #666; margin: 0 1rem;">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-medium" href="#" style="color: #666; margin: 0 1rem;">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-medium" href="#" style="color: #666; margin: 0 1rem;">FAQs</a>
                </li>
            </ul>

            <input type="search" class="form-control" placeholder="Search..." style="border-radius: 5px; width: 20vw;">

        </div>
    </nav>

    <div class="d-flex justify-content-center align-items-center min-vh-100 p-4">
        

            <div class="w-50 me-5 mb-4">
                <img src="~/images/sample1.jpg" class="img-fluid" style="max-width: 90%; height: auto; border-radius:15px;">
            </div>

           
            <div style="width: 600px;">
                <div class="bg-light rounded d-flex justify-content-center align-items-center mx-auto mb-4" style="height: 59px;">
                    <h4 class="fw-bold text-center" style="color: #131418;">Create Account</h4>
                </div>

                <form method="POST" action="" class="d-flex flex-column gap-3">
                    <div class="d-flex justify-content-between gap-3">
                        <div class="flex-fill" style="width: 500px">
                            <label class="form-label">First Name</label>
                            <input type="text" name="firstname" class="form-control" required>
                        </div>
                        <div class="flex-fill" style="width: 500px">
                            <label class="form-label">Middle Name</label>
                            <input type="text" name="middlename" class="form-control" required>
                        </div>
                        <div class="flex-fill" style="width: 500px">
                            <label class="form-label">Last Name</label>
                            <input type="text" name="lastname" class="form-control" required>
                        </div>
                    </div>

                    <div>
                        <label class="form-label">Email Address</label>
                        <input type="email" name="email" class="form-control" required>
                    </div>

                    <div>
                        <label class="form-label">Address</label>
                        <input type="text" name="address" class="form-control" required>
                    </div>

                    <div>
                        <label class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" required>
                    </div>

                    <div>
                        <label class="form-label">Confirm Password</label>
                        <input type="password" name="password_confirmation" class="form-control" required>
                    </div>

                    <button type="submit" class="btn w-100 text-white" style="background-color: #131418;">Register</button>
                </form>

            <div class="mt-4 text-center">
                Already have an account? <a href="{{ route('login') }}" style="color: #131418;">Login</a>
                </div>
            </div>
    </div>


    <!-- Footer -->
    <footer class="mt-5 py-4 text-center" style="background-color: #E4E2DD; border-top: 1px solid #e9ecef;">
        <div class="container">
            <p class="mb-0" style="color: #131418; font-size: 0.9rem;">
                Copyright © 2025 VYBR · All Rights Reserved.
            </p>
        </div>
    </footer>
</body>
